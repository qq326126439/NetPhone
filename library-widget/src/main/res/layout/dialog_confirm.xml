<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:minHeight="@dimen/dp_200"
    android:layout_gravity="center"
    android:background="@drawable/shape_white_bg_8"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="提示"
            style="@style/sp20_text_size"
            android:textColor="@android:color/black"
            android:visibility="visible" />

        <TextView
            android:layout_marginTop="@dimen/dp_5"

            android:id="@+id/tv_message"
            style="@style/sp14_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:scrollbars="vertical"
            android:text="加载中..." />
        <!-- android:padding="@dimen/comrirm_padding_edge"-->
    </LinearLayout>

    <!--<View
        android:background="@color/app_gray_color"
        android:layout_width="match_parent"
        android:layout_height="1px"/>-->
    <include layout="@layout/view_line_h"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:id="@+id/doubleBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/shape_btn_gray_bg_8"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_blue_bg_8"
                android:gravity="center"
                android:text="@string/confirm1"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/singleBtn"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:background="@drawable/shape_btn_blue_bg_8"
            android:gravity="center"
            android:text="@string/confirm1"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/sp_16"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>
