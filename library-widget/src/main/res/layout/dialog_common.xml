<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:background="@drawable/shape_white_bg_8"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/str_strike_through"
            android:textColor="@color/text_color_1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/line_horizontal_top"
            style="@style/line_horizontal_1dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="@dimen/dp_200"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:scrollbarSize="@dimen/dp_2"
                android:scrollbarStyle="outsideInset"
                android:scrollbarThumbVertical="@color/text_color_4"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/str_strike_through"
                android:textColor="@color/text_color_2"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/line_horizontal"
            style="@style/line_horizontal_1dp" />

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/shape_btn_gray_bg_8"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_blue_bg_8"
                android:gravity="center"
                android:text="@string/confirm1"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>