<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:background="@drawable/item_risk_task_bg_weight"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            tools:text="100吨压力机光栅保护安全提升"
            android:textColor="@color/text_color_1"
            android:textSize="@dimen/sp_16"
            android:padding="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/selector_check_msg_bg"
            android:button="@null"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_expense"
            style="@style/daily_inspection_tv"
            android:layout_marginStart="@dimen/dp_8"
            tools:text="总费用(万元)：29.04" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/daily_inspection_tv"
            android:layout_marginStart="@dimen/dp_4"
            tools:text="提报类型：年度提报" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/daily_inspection_tv"
            android:layout_marginStart="@dimen/dp_8"
            tools:text="提报人：张三" />

        <TextView
            android:id="@+id/tv_unit_name"
            style="@style/daily_inspection_tv"
            android:layout_marginStart="@dimen/dp_4"
            tools:text="提报部门：安全环保部" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_unit_use"
        style="@style/daily_inspection_tv"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        tools:text="使用部门：安全环保部" />

</LinearLayout>