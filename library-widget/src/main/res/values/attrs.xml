<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 流布局-->
    <declare-styleable name="FlowLayout">
        <!--支持折叠 -->
        <attr name="flow_fold" format="boolean" />
        <!--折叠时的行数（支持折叠情况下） -->
        <attr name="flow_foldLines" format="integer" />
        <!--平均分配 -->
        <attr name="flow_equally" format="boolean" />
        <!--平局分配一行的数量 -->
        <attr name="flow_equally_count" format="integer" />
        <!--水平间距 -->
        <attr name="flow_horizontalSpacing" format="dimension" />
        <!--竖直间距 -->
        <attr name="flow_verticalSpacing" format="dimension" />
        <!--左右对齐 -->
        <attr name="flow_gravity">
            <enum name="LEFT" value="0" />
            <enum name="RIGHT" value="1" />
        </attr>
    </declare-styleable>

    <!--loading attributes-->
    <declare-styleable name="CircleProgressBar">
        <attr name="mlpb_inner_radius" format="dimension" />
        <attr name="mlpb_background_color" format="color" />
        <attr name="mlpb_progress_color" format="color" />
        <attr name="mlpb_progress_stoke_width" format="dimension" />
        <attr name="mlpb_show_arrow" format="boolean" />
        <attr name="mlpb_enable_circle_background" format="boolean" />
        <attr name="mlpb_arrow_width" format="dimension" />
        <attr name="mlpb_arrow_height" format="dimension" />
        <attr name="mlpb_progress" format="integer" />
        <attr name="mlpb_max" format="integer" />
        <attr name="mlpb_progress_text_size" format="dimension" />
        <attr name="mlpb_progress_text_color" format="color" />
        <!--<attr name="mlpb_progress_text_offset" format="dimension"/>-->
        <attr name="mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <attr name="rRadius" format="dimension" />
    <attr name="rLeftRadius" format="dimension" />
    <attr name="rRightRadius" format="dimension" />
    <attr name="rTopRadius" format="dimension" />
    <attr name="rBottomRadius" format="dimension" />
    <attr name="rTopLeftRadius" format="dimension" />
    <attr name="rTopRightRadius" format="dimension" />
    <attr name="rBottomLeftRadius" format="dimension" />
    <attr name="rBottomRightRadius" format="dimension" />
    <attr name="rStrokeWidth" format="dimension" />
    <attr name="rStrokeColor" format="reference|color" />

    <declare-styleable name="RoundCorner">
        <attr name="rRadius" />
        <attr name="rLeftRadius" />
        <attr name="rRightRadius" />
        <attr name="rTopRadius" />
        <attr name="rBottomRadius" />
        <attr name="rTopLeftRadius" />
        <attr name="rTopRightRadius" />
        <attr name="rBottomLeftRadius" />
        <attr name="rBottomRightRadius" />
        <attr name="rStrokeWidth" />
        <attr name="rStrokeColor" />
        <attr name="rNewLayer" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <!--水平进度条-->
    <declare-styleable name="HorizontalProgressView">
        <attr name="item_width" format="dimension" />
        <attr name="bgColor" format="color" />
        <attr name="proColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleTextureBorderView">
        <attr name="circleTextureWidth" format="dimension" />
        <attr name="circleTextureBorderColor" format="color" />
    </declare-styleable>

    //底部菜单栏样式
    <declare-styleable name="MeowBottomNavigation">
        <attr name="mbn_defaultIconColor" format="color" />
        <attr name="mbn_selectedIconColor" format="color" />
        <attr name="mbn_backgroundBottomColor" format="color" />
        <attr name="mbn_circleColor" format="color" />
        <attr name="mbn_countTextColor" format="color" />
        <attr name="mbn_countBackgroundColor" format="color" />
        <attr name="mbn_countTypeface" format="string" />
        <attr name="mbn_rippleColor" format="color" />
        <attr name="mbn_shadowColor" format="color" />
        <attr name="mbn_hasAnimation" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RoundTextureView">
        <attr name="textureRadius" format="float" />
    </declare-styleable>

    <attr name="title" format="string|reference" />
    <attr name="gone_title" format="boolean" />
    <attr name="has_star_icon" format="boolean" />
    <attr name="tv_content" format="string|reference" />
    <attr name="et_hint" format="string|reference" />
    <attr name="et_content" format="string|reference" />
    <attr name="is_read_only" format="boolean" />
    <attr name="has_cut_line" format="boolean" />
    <attr name="has_right_icon" format="boolean" />
    <attr name="title_change" format="boolean" />
    <attr name="et_max_length" format="integer" />
    <attr name="et_decimal_length" format="integer" />
    <attr name="et_integer_length" format="integer" />
    <attr name="right_icon_background" format="reference" />
    <attr name="right_txt_clr" format="color" />
    <attr name="right_txt" format="reference|string" />
    <attr name="left_txt" format="reference|string" />
    <attr name="has_unit_name" format="boolean" />

    <!--编辑框带标题-->
    <declare-styleable name="EditTextWithTitle">
        <attr name="title" />
        <attr name="et_hint" />
        <attr name="et_content" />
        <attr name="content_color" format="reference|color" />
        <attr name="has_star_icon" />
        <attr name="is_read_only" />
        <attr name="et_max_length" />
        <attr name="et_integer_length" />
        <attr name="et_decimal_length" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
    </declare-styleable>

    <!--编辑框带标题-->
    <declare-styleable name="DoubleCheckBoxLayout">
        <attr name="title" />
        <attr name="has_star_icon" />
        <attr name="is_read_only" />
        <attr name="radio_need_text" format="string|reference" />
        <attr name="radio_unwanted_text" format="string|reference" />
    </declare-styleable>

    <!--限制长度编辑框带标题-->
    <declare-styleable name="LimitEditTextWithTitle">
        <attr name="title" />
        <attr name="gone_title" />
        <attr name="et_hint" />
        <attr name="et_content" />
        <attr name="et_max_length" />
        <attr name="has_star_icon" />
        <attr name="is_read_only" />
    </declare-styleable>

    <!--限制长度编辑框带标题-->
    <declare-styleable name="LimitEditFrame">
        <attr name="et_hint" />
        <attr name="et_content" />
        <attr name="max_length" format="integer" />
        <attr name="is_read_only" />
    </declare-styleable>

    <!--单选显示控件-->
    <declare-styleable name="SingleSelectTextWithTitle">
        <!--标题-->
        <attr name="title" />
        <!--内容-提示语-->
        <attr name="tv_hint" format="string|reference" />
        <!--内容-->
        <attr name="tv_content" />
        <attr name="color_content" format="color" />
        <!--中间提示语，默认隐藏-->
        <attr name="middle_tips" format="string|reference" />
        <attr name="has_star_icon" />
        <attr name="is_read_only" />
        <attr name="title_change" />
        <attr name="right_icon_background" />
        <attr name="right_txt" />
        <attr name="right_txt_clr" />
        <attr name="has_right_icon" />
        <attr name="gone_title" />
    </declare-styleable>

    <!--多选显示控件-->
    <declare-styleable name="MultiSelectTextWithTitle">
        <!--标题-->
        <attr name="title" />
        <!--内容-->
        <attr name="tv_content" />
        <attr name="et_hint" />
        <attr name="has_star_icon" />
        <attr name="gone_title" />
        <attr name="has_cut_line" />
        <attr name="is_read_only" />
        <attr name="has_unit_name" />
        <attr name="left_txt" />
    </declare-styleable>

    <!--底部按钮-->
    <declare-styleable name="BottomButton">
        <!--取消按钮文本-->
        <attr name="negative_txt" format="string|reference" />
        <!--取消按钮颜色-->
        <attr name="negative_txt_clr" format="color" />
        <!--取消按钮背景-->
        <attr name="negative_bg" format="reference" />

        <!--中间按钮文本-->
        <attr name="neutral_txt" format="string|reference" />
        <!--中间按钮颜色-->
        <attr name="neutral_txt_clr" format="color" />
        <!--中间按钮背景-->
        <attr name="neutral_bg" format="reference" />

        <!--确定按钮文本-->
        <attr name="positive_txt" format="string|reference" />
        <!--确定按钮颜色-->
        <attr name="positive_txt_clr" format="color" />
        <!--确定按钮背景-->
        <attr name="positive_bg" format="reference" />
    </declare-styleable>

    <!--带阴影布局-->
    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension" />
        <attr name="sl_shadowRadius" format="dimension" />
        <attr name="sl_shadowColor" format="color" />
        <attr name="sl_dx" format="dimension" />
        <attr name="sl_dy" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CalendarView">

        <attr name="calendar_padding" format="dimension" /><!--日历内部左右padding-->
        <attr name="calendar_padding_left" format="dimension" /><!--日历内部左padding-->
        <attr name="calendar_padding_right" format="dimension" /><!--日历内部右padding-->


        <attr name="week_background" format="color" /><!--周背景-->
        <attr name="week_line_background" format="color" /><!--线条颜色-->
        <attr name="week_text_color" format="color" /><!--周栏字体颜色-->
        <attr name="week_text_size" format="dimension" /><!--周栏字体大小-->
        <attr name="week_line_margin" format="dimension" /><!--线条margin-->

        <attr name="month_view" format="string" /><!--完全自定义月视图-->
        <attr name="week_view" format="string" /> <!--完全自定义周视图-->
        <attr name="year_view" format="string" /> <!--完全自定义年视图-->
        <attr name="week_bar_height" format="dimension" /> <!--星期栏的高度-->
        <attr name="week_bar_view" format="string" /> <!--如果需要的话使用自定义星期栏-->

        <attr name="scheme_text" format="string" />
        <attr name="day_text_size" format="dimension" />
        <attr name="lunar_text_size" format="dimension" />
        <attr name="calendar_height" format="dimension" />
        <attr name="calendar_match_parent" format="boolean" /> <!-- 全屏日历 -->
        <attr name="scheme_text_color" format="color" />
        <attr name="scheme_month_text_color" format="color" />
        <attr name="scheme_lunar_text_color" format="color" />
        <attr name="scheme_theme_color" format="color" />

        <attr name="selected_theme_color" format="color" />
        <attr name="selected_text_color" format="color" />
        <attr name="selected_lunar_text_color" format="color" />

        <attr name="current_day_text_color" format="color" />
        <attr name="current_day_lunar_text_color" format="color" />
        <attr name="current_month_text_color" format="color" />
        <attr name="other_month_text_color" format="color" />
        <attr name="current_month_lunar_text_color" format="color" />
        <attr name="other_month_lunar_text_color" format="color" />


        <!-- 年视图相关 -->
        <attr name="year_view_month_text_size" format="dimension" />
        <attr name="year_view_day_text_size" format="dimension" />
        <attr name="year_view_month_text_color" format="color" />
        <attr name="year_view_current_day_text_color" format="color" />
        <attr name="year_view_day_text_color" format="color" />
        <attr name="year_view_select_text_color" format="color" />
        <attr name="year_view_scheme_color" format="color" />
        <attr name="year_view_background" format="color" />
        <attr name="year_view_month_height" format="dimension" />
        <attr name="year_view_week_height" format="dimension" />
        <attr name="year_view_week_text_size" format="dimension" />
        <attr name="year_view_week_text_color" format="color" />

        <attr name="year_view_padding" format="dimension" />
        <attr name="year_view_padding_left" format="dimension" />
        <attr name="year_view_padding_right" format="dimension" />

        <attr name="year_view_month_padding_top" format="dimension" />
        <attr name="year_view_month_padding_left" format="dimension" />
        <attr name="year_view_month_padding_right" format="dimension" />
        <attr name="year_view_month_padding_bottom" format="dimension" />

        <!--日期范围-->
        <attr name="min_year" format="integer" />
        <attr name="max_year" format="integer" />
        <attr name="min_year_month" format="integer" />
        <attr name="max_year_month" format="integer" />
        <attr name="min_year_day" format="integer" />
        <attr name="max_year_day" format="integer" />


        <!--月视图是否可滚动-->
        <attr name="month_view_scrollable" format="boolean" />
        <!--周视图是否可滚动-->
        <attr name="week_view_scrollable" format="boolean" />
        <!--年视图是否可滚动-->
        <attr name="year_view_scrollable" format="boolean" />

        <!-- 月份显示模式 -->
        <attr name="month_view_show_mode">
            <enum name="mode_all" value="0" />
            <enum name="mode_only_current" value="1" />
            <enum name="mode_fix" value="2" />
        </attr>

        <!-- 自定义周起始 -->
        <attr name="week_start_with">
            <enum name="sun" value="1" />
            <enum name="mon" value="2" />
            <enum name="sat" value="7" />
        </attr>

        <!-- 自定义选择模式 -->
        <attr name="select_mode">
            <enum name="default_mode" value="0" />
            <enum name="single_mode" value="1" />
            <enum name="range_mode" value="2" />
            <enum name="multi_mode" value="3" />
        </attr>

        <!-- when select_mode = multi_mode -->
        <attr name="max_multi_select_size" format="integer" />

        <!-- when select_mode = range_mode -->
        <attr name="min_select_range" format="integer" />
        <attr name="max_select_range" format="integer" />

        <!-- auto select day -->
        <attr name="month_view_auto_select_day">
            <enum name="first_day_of_month" value="0" />
            <enum name="last_select_day" value="1" />
            <enum name="last_select_day_ignore_current" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CalendarLayout">
        <attr name="default_status">
            <enum name="expand" value="0" />
            <enum name="shrink" value="1" />
        </attr>


        <!-- 手势模式 -->
        <attr name="gesture_mode">
            <enum name="default_mode" value="0" />
            <!--<enum name="only_calendar" value="1" />-->
            <enum name="disabled" value="2" />
        </attr>

        <attr name="calendar_show_mode">
            <enum name="both_month_week_view" value="0" />
            <enum name="only_week_view" value="1" />
            <enum name="only_month_view" value="2" />
        </attr>
        <attr name="calendar_content_view_id" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <!--背景圆环宽度-->
        <attr name="backWidth" format="dimension" />
        <!--进度圆环宽度-->
        <attr name="progressWidth" format="dimension" />
        <!--背景圆环颜色-->
        <attr name="backColor" format="color" />
        <!--进度圆环颜色-->
        <attr name="progressColor" format="color" />
        <!--进度圆环开始颜色-->
        <attr name="progressStartColor" format="color" />
        <!--进度圆环结束颜色-->
        <attr name="progressFirstColor" format="color" />
        <!--内环虚线-->
        <attr name="virtualWidth" format="float" />
        <!--内环虚线颜色-->
        <attr name="virtualColor" format="color" />
        <!--圆环进度-->
        <attr name="circularProgress" format="float" />
        <!--内环进度文字大小-->
        <attr name="progressTextSize" format="float" />
        <!--内环进度文字颜色-->
        <attr name="progressTextColor" format="color" />
        <!--内环显示文字大小-->
        <attr name="contentSize" format="float" />
        <!--内环显示文字颜色-->
        <attr name="contentColor" format="color" />
        <!--内环显示文字-->
        <attr name="contentText" format="string" />
    </declare-styleable>

    <declare-styleable name="NineGridView">
        <attr name="ngv_singleImageSize" format="dimension" />
        <attr name="ngv_singleImageRatio" format="float" />
        <attr name="ngv_gridSpacing" format="dimension" />
        <attr name="ngv_maxSize" format="integer" />
        <attr name="ngv_mode" format="enum">
            <enum name="fill" value="0" />
            <enum name="grid" value="1" />
        </attr>
    </declare-styleable>

    <!--气泡布局 参考：https://github.com/MasayukiSuda/BubbleLayout-->
    <declare-styleable name="BubbleLayout">
        <attr name="bl_arrowWidth" format="dimension|reference" />
        <attr name="bl_cornersRadius" format="dimension|reference" />
        <attr name="bl_arrowHeight" format="dimension|reference" />
        <attr name="bl_arrowPosition" format="dimension|reference" />
        <attr name="bl_bubbleColor" format="color|reference" />
        <attr name="bl_strokeWidth" format="dimension|reference" />
        <attr name="bl_strokeColor" format="color|reference" />

        <attr name="bl_arrowDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left_center" value="4" />
            <enum name="right_center" value="5" />
            <enum name="top_center" value="6" />
            <enum name="bottom_center" value="7" />
            <enum name="top_right" value="8" />
            <enum name="bottom_right" value="9" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomSeekBar">
        <!--结果显示-->
        <attr name="scoreDrawable" format="reference" />
        <attr name="scoreTextColor" format="color" />
        <attr name="seekbarTextSize" format="dimension" />
        <attr name="evaluateTextColor" format="color" />
        <attr name="evaluateTextSize" format="dimension" />
        <attr name="rulerColor" format="color" />
    </declare-styleable>
</resources>